<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RaidoRun" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_primaryContainer</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_theme_secondary</item>
        <item name="colorSecondaryVariant">@color/md_theme_secondaryContainer</item>
        <item name="colorOnSecondary">@color/md_theme_onSecondary</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/md_theme_background</item>
        <item name="colorSurface">@color/md_theme_surface</item>
        <item name="colorOnSurface">@color/md_theme_onSurface</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/md_theme_error</item>
        <item name="colorOnError">@color/md_theme_onError</item>
        
        <!-- Card colors -->
        <item name="cardBackgroundColor">@color/white</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/wii_gray_medium</item>
        <item name="android:textColorTertiary">@color/gray_strong</item>
        
        <!-- Ripple effect -->
        <item name="colorControlHighlight">@color/wii_blue_light</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/gray_strong</item>
        
        <!-- Dialog theme -->
        <item name="dialogCornerRadius">28dp</item>
        <item name="colorPrimaryContainer">@color/white</item>

        <item name="floatingActionButtonSurfaceStyle">@color/white</item>
        <item name="floatingActionButtonStyle">@color/wii_blue</item>
    </style>

    <style name="Theme.RaidoRun" parent="Base.Theme.RaidoRun" />

    <color name="fab_background_light">@color/white</color>
    <color name="fab_icon_light">@color/wii_blue</color>

    <color name="map_background">@color/wii_gray_medium</color>

    <color name="wii_sport_background">@color/wii_blue_ultra_light</color>
    <color name="wii_level_circle">@color/wii_accent</color>
    <color name="wii_text_secondary">@color/wii_gray_medium</color>

    <color name="record_background">@color/wii_blue_ultra_light</color>

    <!-- Splash Screen theme for API < 31 -->
    <style name="Theme.RaidoRun.Starting" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>