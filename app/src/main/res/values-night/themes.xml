<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RaidoRun" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/wii_blue</item>
        <item name="colorPrimaryVariant">@color/wii_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/wii_blue_light</item>
        <item name="colorSecondaryVariant">@color/wii_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Accent color. -->
        <item name="colorAccent">@color/wii_accent</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray_dark</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/gray_dark</item>
        <item name="colorSurface">@color/gray_strong</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- Card colors -->
        <item name="cardBackgroundColor">@color/gray_strong</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/wii_gray_medium</item>
        <item name="android:textColorTertiary">@color/gray_light_trans</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/gray_dark</item>
        
        <!-- Ripple effect -->
        <item name="colorControlHighlight">@color/wii_blue_light</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/gray_strong</item>
        
        <!-- Dialog theme -->
        <item name="dialogCornerRadius">28dp</item>
        <!--        <item name="dialogBackgroundColor">@color/gray_strong</item>-->
        <item name="colorPrimaryContainer">@color/gray_strong</item>

        <item name="floatingActionButtonSurfaceStyle">@color/wii_blue</item>
        <item name="floatingActionButtonStyle">@color/white</item>
    </style>

    <color name="fab_background_light">@color/wii_blue</color>
    <color name="fab_icon_light">@color/white</color>

    <color name="map_background">@color/gray_strong</color>

    <color name="wii_sport_background">@color/wii_blue_dark</color>
    <color name="wii_level_circle">@color/wii_accent</color>
    <color name="wii_text_secondary">@color/wii_gray</color>

    <color name="record_background">@color/wii_blue</color>

</resources>