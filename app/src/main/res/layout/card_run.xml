<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_record"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    card_view:cardBackgroundColor="?attr/android:colorBackground"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:id="@+id/lyDataRun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/lyDataRunHeader"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHeaderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:text="05-OCT-2021"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvHeaderDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/sport_data_background"
                android:fontFamily="sans-serif-light"
                android:padding="5dp"
                android:elevation="5dp"
                android:text="01:00HH"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvHeaderDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/sport_data_background"
                android:fontFamily="sans-serif-light"
                android:padding="5dp"
                android:elevation="5dp"
                android:text="12.5KM"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvHeaderAvgSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/sport_data_background"
                android:fontFamily="sans-serif-light"
                android:padding="5dp"
                android:elevation="5dp"
                android:text="12.5KM/H"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/ivHeaderMedalDistance"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/medal_null_dark" />

            <ImageView
                android:id="@+id/ivHeaderMedalAvgSpeed"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/medal_null_dark" />

            <ImageView
                android:id="@+id/ivHeaderMedalMaxSpeed"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/medal_null_dark" />

            <ImageView
                android:id="@+id/ivHeaderOpenClose"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:rotation="0"
                android:src="@drawable/opener_icon" />

        </LinearLayout>

        <!-- Body -->
        <LinearLayout
            android:id="@+id/lyDataRunBody"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lyDataRunBodyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:translationY="0dp">

                <!-- Body 1 -->
                <LinearLayout
                    android:id="@+id/lyDataDateSport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="top|right"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lySport"
                        android:layout_width="80dp"
                        android:layout_height="52dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:elevation="5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivSportSelected"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/sport_title_background"
                            android:src="@mipmap/running" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyDate"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sport_data_background"
                        android:gravity="top|right"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp"
                        android:elevation="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="sans-serif-light"
                            android:text="05-OCT-2021"
                            android:textAlignment="textEnd"
                            android:textColor="?attr/android:textColorPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvStartTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="sans-serif-light"
                            android:text="00:00:00"
                            android:textAlignment="textEnd"
                            android:textColor="?attr/android:textColorSecondary"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyPicture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivPicture"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPlay"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/delete_button_background"
                        android:fontFamily="sans-serif-light"
                        android:elevation="3dp"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:text="REPRODUCIR"
                        android:textAlignment="center"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDelete"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/replay_button_background"
                        android:fontFamily="sans-serif-light"
                        android:padding="5dp"
                        android:text="ELIMINAR"
                        android:textAlignment="center"
                        android:elevation="3dp"
                        android:textColor="@color/gray_dark"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Body 2 -->
                <LinearLayout
                    android:id="@+id/lyDataDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:gravity="top|end"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lyDuration"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/sport_data_background"
                        android:gravity="top|end"
                        android:orientation="vertical"
                        android:elevation="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/tvDurationTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/PopUpDurationTitle"
                            android:textAlignment="textEnd"
                            android:textColor="?attr/android:textColorPrimary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvDurationRun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="sans-serif-light"
                            android:text="00:00:00"
                            android:textAlignment="textEnd"
                            android:textColor="?attr/android:textColorSecondary"
                            android:textSize="11sp" />

                        <LinearLayout
                            android:id="@+id/lyChallengeDurationRun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top|end"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvChallengeTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="5dp"
                                android:fontFamily="sans-serif-light"
                                android:text="@string/PopUpChallengeTitle"
                                android:textAlignment="textEnd"
                                android:textColor="?attr/android:textColorPrimary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvChallengeDurationRun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginEnd="5dp"
                                android:fontFamily="sans-serif-light"
                                android:text="01:00:00"
                                android:textAlignment="textEnd"
                                android:textColor="?attr/android:textColorSecondary"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lyIntervalRun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top|end"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvIntervalTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="5dp"
                                android:fontFamily="sans-serif-light"
                                android:text="@string/PopUpIntervalTitle"
                                android:textAlignment="textEnd"
                                android:textColor="?attr/android:textColorPrimary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvIntervalRun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="sans-serif-light"
                                android:text="5min (1:45 / 3:15)"
                                android:textAlignment="textEnd"
                                android:textColor="?attr/android:textColorSecondary"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Body 3 -->
                <LinearLayout
                    android:id="@+id/lyDataDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lyDistance"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:elevation="5dp"
                        android:background="@drawable/sport_data_background"
                        android:gravity="top|end"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/tvDistanceTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/PopUpDistanceTitle"
                            android:textAlignment="textEnd"
                            android:textColor="?attr/android:textColorPrimary"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:id="@+id/lyDistanceData"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:gravity="top|end"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvDistanceRun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginEnd="3dp"
                                android:fontFamily="sans-serif-light"
                                android:text="0.00"
                                android:textAlignment="textEnd"
                                android:textColor="?attr/android:textColorSecondary"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvDistanceRunUX"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginEnd="5dp"
                                android:fontFamily="sans-serif-light"
                                android:text="KM"
                                android:textAlignment="textEnd"
                                android:textColor="?attr/android:textColorSecondary"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lyChallengeDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top|end"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvChallengeDistanceTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="5dp"
                                android:fontFamily="sans-serif-light"
                                android:text="@string/PopUpChallengeTitle"
                                android:textAlignment="textEnd"
                                android:textColor="?attr/android:textColorPrimary"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:id="@+id/lyChallengeDistanceRun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="top|end"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvChallengeDistanceRun"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginEnd="3dp"
                                    android:fontFamily="sans-serif-light"
                                    android:text="15.00"
                                    android:textAlignment="textEnd"
                                    android:textColor="?attr/android:textColorSecondary"
                                    android:textSize="11sp" />

                                <TextView
                                    android:id="@+id/tvChallengeDistanceRunUX"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginEnd="5dp"
                                    android:fontFamily="sans-serif-light"
                                    android:text="KM"
                                    android:textAlignment="textEnd"
                                    android:textColor="?attr/android:textColorSecondary"
                                    android:textSize="11sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lyUnevennessRun"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top|end"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvUnevennessTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="5dp"
                                android:fontFamily="sans-serif-light"
                                android:text="@string/PopUpUnevennessTitle"
                                android:textAlignment="textEnd"
                                android:textColor="?attr/android:textColorPrimary"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:id="@+id/lyUnevennessDataRun"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="0dp"
                                android:gravity="top|end"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/lyMaxUnevennessRun"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="0dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvMaxUnevennessRun"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="2dp"
                                        android:drawableStart="@drawable/max"
                                        android:drawablePadding="3dp"
                                        android:fontFamily="sans-serif-light"
                                        android:text="1782"
                                        android:textColor="@android:color/holo_green_light"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/tvMaxUnevennessUX"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="4dp"
                                        android:fontFamily="sans-serif-light"
                                        android:text="MSNM"
                                        android:textAlignment="textEnd"
                                        android:textColor="?attr/android:textColorPrimary"
                                        android:textSize="9sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lyMinUnevennessRun"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="0dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvMinUnevennessRun"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginEnd="2dp"
                                        android:drawableStart="@drawable/min"
                                        android:drawablePadding="3dp"
                                        android:fontFamily="sans-serif-light"
                                        android:text="1782"
                                        android:textColor="@android:color/holo_red_light"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/tvMinUnevennessUX"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginEnd="4dp"
                                        android:fontFamily="sans-serif-light"
                                        android:text="MSNM"
                                        android:textAlignment="textEnd"
                                        android:textColor="?attr/android:textColorPrimary"
                                        android:textSize="9sp" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Body 4 -->
                <LinearLayout
                    android:id="@+id/lyDataSpeedMedals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lySpeeds"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/sport_data_background"
                        android:gravity="top|end"
                        android:elevation="5dp"
                        android:layout_marginStart="5dp"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/tvAvgSpeedTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/CardAvgSpeedTitle"
                            android:textAlignment="textEnd"
                            android:textColor="?attr/android:textColorPrimary"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:id="@+id/lyAvgSpeedDataRun"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:gravity="top|end"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvAvgSpeedRun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginEnd="4dp"
                                android:fontFamily="sans-serif-light"
                                android:text="0.0"
                                android:textAlignment="textEnd"
                                android:textColor="?attr/android:textColorSecondary"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvAvgSpeedRunUX"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="sans-serif-light"
                                android:text="KM/H"
                                android:textAlignment="textEnd"
                                android:textColor="?attr/android:textColorSecondary"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvMaxSpeedTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/CardMaxSpeedTitle"
                            android:textAlignment="textEnd"
                            android:textColor="?attr/android:textColorPrimary"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:id="@+id/lyMaxSpeedRun"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top|end"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvMaxSpeedRun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginEnd="4dp"
                                android:fontFamily="sans-serif-light"
                                android:text="0.0"
                                android:textAlignment="textEnd"
                                android:textColor="?attr/android:textColorSecondary"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvMaxSpeedRunUX"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="sans-serif-light"
                                android:text="KM/H"
                                android:textAlignment="textEnd"
                                android:textColor="?attr/android:textColorSecondary"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyMedalsRun"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="top|center"
                        android:orientation="horizontal"
                        android:translationY="-30dp">

                        <LinearLayout
                            android:id="@+id/lyMedalDistance"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:gravity="center|center"
                            android:orientation="vertical"
                            android:paddingBottom="0dp">

                            <ImageView
                                android:id="@+id/ivMedalDistance"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:src="@drawable/medal_null_dark" />

                            <TextView
                                android:id="@+id/tvMedalDistanceTitle"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="sans-serif-light"
                                android:text="@string/textNull"
                                android:textAlignment="center"
                                android:textColor="?attr/android:textColorPrimary"
                                android:textSize="10sp"
                                android:textStyle="italic"
                                android:translationY="05dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lyMedalAvgSpeed"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:gravity="bottom|center"
                            android:orientation="vertical"
                            android:paddingBottom="0dp">

                            <ImageView
                                android:id="@+id/ivMedalAvgSpeed"
